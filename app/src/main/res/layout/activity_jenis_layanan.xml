<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".JenisLayananActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:text="JENIS LAYANAN"
        android:textStyle="bold"
        android:textColor="@color/biru"
        android:layout_marginTop="72dp"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/btnLayananDasar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/btn_shape_round"
        android:text="Dasar"
        android:textAllCaps="false"
        android:textColor="@color/biru"
        android:textSize="26sp"
        />
    <Button
        android:id="@+id/btnLayananPeminatan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/btn_shape_round"
        android:text="Peminatan dan Perencanaan Individual"
        android:textAllCaps="false"
        android:textColor="@color/biru"
        android:textSize="26sp"
        />
    <Button
        android:id="@+id/btnLayananResponsif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/btn_shape_round"
        android:text="Responsif"
        android:textAllCaps="false"
        android:textColor="@color/biru"
        android:textSize="26sp"
        />
    <Button
        android:id="@+id/btnLayananDukungan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/btn_shape_round"
        android:text="Dukungan Sistem"
        android:textAllCaps="false"
        android:textColor="@color/biru"
        android:textSize="26sp"
        />

</LinearLayout>