<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AktivitasActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:textStyle="bold"
        android:text="ACTIVITY"
        android:textColor="@color/biru"
        android:layout_marginTop="72dp"
        android:layout_gravity="center"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/btn_shape_round"
        android:backgroundTint="@color/biru"
        android:text="Mulai Aktivitas"
        android:textAllCaps="false"
        android:textColor="@color/biru"
        android:textSize="26sp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/centang"
            android:layout_marginStart="30dp"/>

        <TextView
            android:id="@+id/tvDeskripsiAktivitas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deskripsi Aktivitas"
            android:textSize="24sp"
            android:textColor="@color/biru"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/centang"
            android:layout_marginStart="30dp"/>

        <TextView
            android:id="@+id/tvIsiEvaluasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Isi Evaluasi"
            android:textSize="24sp"
            android:textColor="@color/biru"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            />
    </LinearLayout>


    <Button
        android:id="@+id/btnKembaliKeMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/btn_shape_round"
        android:text="Kembali ke Menu"
        android:textAllCaps="false"
        android:textColor="@color/biru"
        android:textSize="26sp"
        />

</LinearLayout>